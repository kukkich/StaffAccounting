@using StaffAccounting.Models.Company;
@model Director

<h1>Директор</h1>

@await Html.PartialAsync("Details/Employee", Model)

<div>
    <dl class="dl-horizontal">
        <dt>Бухгалтера</dt>
        <dd>
            <div class="items-collection">
                @{
                    int accountantsCount = Model.Accountants.Count();
                }
                @for (int accountantNumber = 0; accountantNumber < accountantsCount; accountantNumber++)
                {
                    <a asp-action="Details" asp-controller="Employee" asp-route-id="@Model.Accountants[accountantNumber].Id">
                        @(accountantNumber+1). @Model.Accountants[accountantNumber].FullName
                    </a>
                    <br />
                }
            </div>
        </dd>
        <dt>Главы департамента</dt>
        <dd>
            <div class="items-collection">
                @{
                    int headsCount = Model.DepartamentHeads.Count();
                }
                @for (int headsNumber = 0; headsNumber < headsCount; headsNumber++)
                {
                    <a asp-action="Details" asp-controller="Employee" asp-route-id="@Model.DepartamentHeads[headsNumber].Id">
                        @(headsNumber+1). @Model.DepartamentHeads[headsNumber].FullName
                    </a>
                    <br />
                }
            </div>
        </dd>
    </dl>
</div>