@using StaffAccounting.Models.Company;
@model Worker

<h1>Рабочий</h1>

@await Html.PartialAsync("Details/Employee", Model)

<div>
    <dl class="dl-horizontal">
        <dt>Менеджер</dt>
        <dd>
            <a asp-action="Details" asp-controller="Employee" asp-route-id="@Model.ManagerId">
                @Model.Manager.FullName
            </a>
        </dd>
        <dt>Должность</dt>
        <dd>
            <a asp-action="Details" asp-controller="Rank" asp-route-id="@Model.RankId">
                @Model.Rank.Name
            </a>
        </dd>
    </dl>
</div>