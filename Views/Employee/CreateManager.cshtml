@using StaffAccounting.Models.Company
@model StaffAccounting.Models.Company.EmployeeCreationModel
@{
    ViewData["Title"] = "Добавление менеджера";
    Layout = "_CreateTemplate";
    IOrderedQueryable<Project> orderedProjects = 
        ((IQueryable<Project>)ViewBag.Company.Projects)
        .OrderBy(project => project.Name);
    IOrderedQueryable<DepartmentHead> orderedDepartmentHeads = 
        ((IQueryable<DepartmentHead>)ViewBag.Company.DepartmentHeads)
        .OrderBy(head => head.LastName);
}

<div class="form-group">
    <label asp-for="DepartmentHeadId" class="control-label">Глава Департамента</label>
    <select id="DepartmentHeadId" asp-for="DepartmentHeadId" class="form-control">
        @foreach (DepartmentHead head in orderedDepartmentHeads)
        {
            <option value=@head.Id>@head.FullName</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="ProjectId" class="control-label">Проект</label>
    <select id="ProjectId" asp-for="ProjectId" class="form-control">
        @foreach (Project project in orderedProjects)
        {
            <option value=@project.Id>@project.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="Sex" class="form-label">Пол</label>
</div>
