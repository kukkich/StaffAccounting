@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<StaffAccounting.Models.Company.Employee>

<table class="table">
    <tr>
        <td>Id</td>
        <td>ФИО</td>
        <td>Лет</td>
        <td>Пол</td>
        <td>Действия</td>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.FullName</td>
            <td>@employee.Age</td>
            <td>@employee.Sex</td>
            <td>
                <a asp-action="Details" asp-controller="Employee" asp-route-id="@employee.Id">Подробнее</a> |
                <a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id">Изменить</a> |
            </td>
        </tr>
    }
</table>
