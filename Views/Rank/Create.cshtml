@using StaffAccounting.Models.Company
@model Rank
@{
    ViewBag.Title = "Добавление департамента";
}

<div class="create-form">
    <form asp-action="Create" asp-controller="Rank">
        <div class="row">
            <div class="form-group col-md-8 order-md-1">
                <label asp-for="Name" class="control-label">Название</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="col-12">
            <input type="submit" value="Добавить" class="btn btn-outline-primary button-confirm" />
        </div>
    </form>
</div>