@{
    ViewData["Title"] = "Департаменты";
}
@model IEnumerable<StaffAccounting.Models.Company.Department>

<table class="table table-striped table-sm">
    <thead>
        <td>Имя</td>
        <td>Действия</td>
    </thead>
    @foreach (var department in Model)
    {
        <tr>
            <td>@department.Name</td>
            <td>
                <div class="btn-group">
                    <a asp-action="Details" asp-controller="Department" asp-route-id="@department.Id" class="btn btn-outline-info btn-sm">Подробнее</a>
                    <a asp-action="Edit" asp-controller="Department" asp-route-id="@department.Id" class="btn btn-outline-secondary btn-sm">Изменить</a>
                    <form asp-action="Delete" asp-controller="Department" asp-route-id="@department.Id">
                        <input type="submit" value="Удалить" class="btn btn-outline-danger btn-sm" />
                    </form>
                </div>
            </td>
        </tr>
    }
</table>

<div class="form-inline form-group button-confirm">
    <a asp-action="Create" asp-controller="Department" 
        class="btn btn-outline-dark btn-sm">
        Добавить
    </a>
</div>
