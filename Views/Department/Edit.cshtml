@using StaffAccounting.Models.Company
@model Department

<form asp-action="Update" asp-controller="Department" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="col-12">
        <input type="submit" value="Сохранить" class="btn btn-outline-primary button-confirm" />
    </div>
</form>