@model StaffAccounting.Models.Company.Department

<h1>@Model.Name</h1>

<div>
    <dl class="dl-horizontal">
        <dt>Главы департамента</dt>
        <dd>
            <div class="items-collection">
                @{
                    int headsCount = Model.Heads.Count();
                }
                @if (headsCount != 0)
                {
                    @for (int headsNumber = 0; headsNumber < Math.Min(headsCount, 3); headsNumber++)
                    {
                        <a asp-action="Details" asp-controller="Employee" asp-route-id="@Model.Heads[headsNumber].Id">
                            @(headsNumber+1). @Model.Heads[headsNumber].FullName
                        </a>
                        <br />
                    }
                    @if (headsCount > 3)
                    {
                        <text>...</text>
                        <br />
                    }
                    <a asp-action="Index" asp-controller="Employee" asp-route-DepartmentId="@Model.Id">
                        Подробнее
                    </a>
                }
                else
                {
                    <span>Отстутствуют</span>
                }
            </div>
        </dd>
    </dl>

    <a asp-action="Edit" asp-controller="Department" asp-route-id="@Model.Id" 
        class="btn btn-outline-secondary btn-sm">
        Изменить
    </a>

    <form asp-action="Delete" asp-controller="Department" asp-route-id="@Model.Id">
        <input type="submit" value="Удалить" class="btn btn-outline-danger btn-sm button-confirm" />
    </form>
</div>