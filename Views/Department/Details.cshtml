@model StaffAccounting.Models.Company.Department

<h1>@Model.Name</h1>

<div>
    <dl class="dl-horizontal">
        <dt>Главы данного департамента</dt>
        <dd>
            <div class="items-collection">
                @{
                    int headsCount = Model.Heads.Count();
                }
                @if (headsCount != 0)
                {
                    @for (int headsNumber = 0; headsNumber < Math.Min(headsCount, 3); headsNumber++)
                    {
                        <a asp-action="Details" asp-controller="Employee" asp-route-id="@Model.Heads[headsNumber].Id">
                            @(headsNumber+1). @Model.Heads[headsNumber].FullName
                        </a>
                        <br />
                    }
                    @if (headsCount > 3)
                    {
                        <text>...</text>
                        <br />
                    }
                    <a asp-action="Index" asp-controller="Employee" asp-route-DepartmentId="@Model.Id">
                        Подробнее
                    </a>
                }
                else
                {
                    <span>Отстутствуют</span>
                }
            </div>
        </dd>
    </dl>
</div>